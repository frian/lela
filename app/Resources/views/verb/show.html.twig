{% extends 'base.html.twig' %}

{% block body %}

    <div class="cell displayCell headerCell">
        <h1>{{ verb.name }}</h1>
    </div>


    <div class="cell displayCell headerCell">

        {% for translation in verb.translations %}
            {{ translation.name }}{% if not loop.last %}, {% endif %}
        {% endfor %}

    </div>


    {% for conjugation in verb.conjugations %}
    <div class="cell displayCell">

        <h2>{{ conjugation.time }}</h2>

        <div class="inlineTable">
            {{ include('verb/pronouns.html.twig') }}
        </div>
        <div class="inlineTable">
            <table class="conjugation">
                <tr>
                    <td>{{ conjugation.firstSing }}</td>
                </tr>
                <tr>
                    <td>{{ conjugation.secondSing }}</td>
                </tr>
                <tr>
                    <td>{{ conjugation.thirdSing }}</td>
                </tr>
                <tr>
                    <td>{{ conjugation.firstPlur }}</td>
                </tr>
                <tr>
                    <td>{{ conjugation.secondPlur }}</td>
                </tr>
                <tr>
                    <td>{{ conjugation.thirdPLur }}</td>
                </tr>
            </table>
        </div>
    </div>
    {% endfor %}


    <div class="cell displayCell">
        <ul>
            <li>
                <a href="{{ path('verb_index') }}">Back to the list</a>
            </li>
            <li>
                <a href="{{ path('verb_edit', { 'id': verb.id }) }}">Edit</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                    <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>

{% endblock %}
